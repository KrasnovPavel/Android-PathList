<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="fill">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Наименование пункта"
		android:layout_gravity="top"
		android:gravity="center_horizontal"
		android:id="@+id/viewName"
		android:background="@drawable/editable_view_unchoosed"/>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="000000"
			android:layout_weight="1.5"
			android:gravity="center_horizontal"
			android:id="@+id/viewSpeedometer"
			android:background="@drawable/editable_view_unchoosed"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="000"
			android:gravity="center_horizontal"
			android:id="@+id/viewFuel"
			android:background="@drawable/editable_view_unchoosed"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="+000"
			android:id="@+id/addFuelView"
			android:background="@drawable/editable_view_unchoosed"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="00,00"
			android:gravity="center_horizontal"
			android:id="@+id/viewOil"
			android:background="@drawable/editable_view_unchoosed"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="+00"
			android:id="@+id/addOilView"
			android:background="@drawable/editable_view_unchoosed"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Тонны"
			android:layout_weight="1.0"
			android:gravity="center_horizontal"
			android:id="@+id/viewMeasure"
			android:background="@drawable/editable_view_unchoosed"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="Моточасы: нет"
			android:layout_weight="1.0"
			android:gravity="center_horizontal"
			android:id="@+id/viewMotoclock"
			android:background="@drawable/editable_view_unchoosed"/>

	</LinearLayout>

	<ScrollView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_weight="1.0"
		android:id="@+id/scrollLayout">

		<GridLayout
			columnCount="1"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			rowCount="1"
			android:columnCount="2">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Medium Text"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Medium Text"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Medium Text"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:text="Medium Text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"/>

            <TextView
                android:layout_width="wrap_content"
