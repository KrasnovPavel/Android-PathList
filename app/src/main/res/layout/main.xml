		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="&lt;---"
			android:id="@+id/buttonBackspace"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="4"
			android:id="@+id/button4"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="5"
			android:id="@+id/button5"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="6"
			android:id="@+id/button6"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="назад"
			android:id="@+id/buttonPrevious"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="1"
			android:id="@+id/button1"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="2"
			android:id="@+id/button2"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="3"
			android:id="@+id/button3"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="далее"
			android:id="@+id/buttonNext"/>

		<ToggleButton
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textOff="город"
			android:textOn="м/город"
			android:text="город"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="0"
			android:id="@+id/button0"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text=","
			android:id="@+id/buttonComma"/>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="готово"
			android:id="@+id/buttonDone"/>

	</GridLayout>

</LinearLayout>

